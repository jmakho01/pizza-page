<!DOCTYPE html>
<html lang = "en">
<head>
    <meta charset = "UTF-8">
    <meta name = "viewport" content = "width = device-width, initial-scale = 1.0">
    <title>Papa's Pizza</title>

    <!-- Favicon -->
    <link rel = "icon" href = "/images/pizza-icon.png">

    <!-- Stylesheet -->
    <link rel = "stylesheet" href = "/styles/pizza-styles.css">
    <link rel = "stylesheet" href = "//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css">

    <!-- JavaScript -->
    <script src = "js/pizza.js" defer></script>
    <script src = "https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src = "//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>
</head>
<body>
    <main>
        <header>
            <img src = "images/pizza-guy.png" alt = "Papa">
            <h1>Papa's Pizza</h1>
            <p id = "tagline">Serving GRC students for 50 years!</p>
            <hr>
            <p><i>The best pizza you've never had!</i></p>
            <h1>Admin Page</h1>
            <table id = "order-table" class = "display">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Method</th>
                        <th>Toppings</th>
                        <th>Size</th>
                        <th>Date/Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>

                    <tr>
                        <td><%= order.fname %> <%= order.lname %></td>
                        <td><%= order.email %></td>
                        <td><%= order.method %></td>
                        <td><%= order.toppings %></td>
                        <td><%= order.size %></td>
                        <td><%= order.timestamp.toLocaleString() %></td>
                    </tr>

                    <% }); %>
                </tbody>
            </table>
        </header>
    <main>
    <script defer>
        let table = new DataTable('#order-table');
    </script>
</body>
</html>